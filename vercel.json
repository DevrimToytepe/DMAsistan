{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(), payment=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://js.stripe.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; connect-src 'self' https://ohoazazkrntbdqzmjonh.supabase.co wss://ohoazazkrntbdqzmjonh.supabase.co https://api.openai.com https://graph.facebook.com https://www.facebook.com https://cdn.jsdelivr.net; img-src 'self' data: blob: https:; frame-src https://js.stripe.com; object-src 'none'; worker-src 'self' blob:; frame-ancestors 'none'; base-uri 'self'; form-action 'self' https://www.facebook.com;"
        }
      ]
    },
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/giris",
      "destination": "/giris.html"
    },
    {
      "source": "/kayit",
      "destination": "/kayit.html"
    },
    {
      "source": "/dashboard",
      "destination": "/dashboard.html"
    },
    {
      "source": "/konusmalar",
      "destination": "/conversations.html"
    },
    {
      "source": "/kisiler",
      "destination": "/contacts.html"
    },
    {
      "source": "/otomasyon",
      "destination": "/automation.html"
    },
    {
      "source": "/analitik",
      "destination": "/analytics.html"
    },
    {
      "source": "/entegrasyonlar",
      "destination": "/integrations.html"
    },
    {
      "source": "/ayarlar",
      "destination": "/settings.html"
    },
    {
      "source": "/faturalama",
      "destination": "/billing.html"
    },
    {
      "source": "/onboarding",
      "destination": "/onboarding.html"
    },
    {
      "source": "/offline",
      "destination": "/offline.html"
    },
    {
      "source": "/sifre-sifirla",
      "destination": "/sifre-sifirla.html"
    },
    {
      "source": "/oauth-callback",
      "destination": "/oauth-callback.html"
    }
  ]
}